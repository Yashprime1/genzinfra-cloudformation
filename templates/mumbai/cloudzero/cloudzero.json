{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Cloudzero stack",
    "Outputs": {
    },
    "Parameters": {
    },
    "Resources": {
      "AppCloudfront":{
        "Type" : "AWS::CloudFront::Distribution",
        "Properties" : {
            "DistributionConfig" : {
                "DefaultCacheBehavior":{
                    "ViewerProtocolPolicy":"allow-all",
                    "TargetOriginId":"MyElbOrigin",
                    "ForwardedValues": {
                      "QueryString": false,
                      "Cookies": {
                          "Forward": "none"
                      }
                  }    
                },
                "Enabled": true,
                "Origins": [
                  {
                      "DomainName": "Virgi-DsElb-OS3SSSBHUEBX-916198225.us-east-1.elb.amazonaws.com",
                      "Id": "MyElbOrigin",
                      "CustomOriginConfig": {
                          "HTTPPort": 80,
                          "HTTPSPort": 443,
                          "OriginProtocolPolicy": "http-only"
                      }
                  }
                ],
                "Logging": {
                  "Bucket": {
                    "Fn::GetAtt": [
                      "CloudfrontLogsS3Bucket",
                      "DomainName"
                    ]
                  },
                  "IncludeCookies": false,
                  "Prefix": "InAppMediaCloudFrontDistribution/"
                }
     
            }
          }
      },  
      "CloudfrontLogsSqsQueue": {
        "Type": "AWS::SQS::Queue",
        "Properties": {}
      },
      "CloudfrontLogsSqsPolicy": {
        "Type": "AWS::SQS::QueuePolicy",
        "Properties": {
          "Queues": [
            {
              "Ref": "CloudfrontLogsSqsQueue"
            }
          ],
          "PolicyDocument": {
            "Statement": [
              {
                "Action": [
                  "sqs:SendMessage",
                  "sqs:ReceiveMessage"
                ],
                "Effect": "Allow",
                "Resource": {
                  "Fn::GetAtt": [
                    "CloudfrontLogsSqsQueue",
                    "Arn"
                  ]
                },
                "Principal": {
                  "Service": "s3.amazonaws.com"
                }
              }
            ]
          }
        }
      },
      "CloudfrontLogsS3Bucket": {
        "Type": "AWS::S3::Bucket",
        "Properties": {
            "BucketName": "cloudfront-accesslog-bucket-yashprime", 
            "OwnershipControls": {
              "Rules": [
                    {
                        "ObjectOwnership": "BucketOwnerPreferred"
                    }
                ]
            },
            "NotificationConfiguration":{
              "QueueConfigurations" : [
                {
                  "Event" : "s3:ObjectCreated:*",
                  "Filter" : {
                    "S3Key" : {
                      "Rules" : [
                        {
                          "Name" : "prefix",
                          "Value" : "*/InAppMediaCloudFrontDistribution/"
                        }
                      ]
                    }
                  },
                  "Queue" : {
                    "Fn::GetAtt": [
                      "CloudfrontLogsSqsQueue",
                      "Arn"
                    ]
                  }
                }
              ]
            } 
        }
      },
      "CloudfrontLogsS3BucketPolicy":{
          "Type" : "AWS::S3::BucketPolicy",
          "Properties" : {
              "Bucket" : {
                  "Ref" : "CloudfrontLogsS3Bucket"
              },
              "PolicyDocument" : {
                  "Version": "2012-10-17",
                  "Statement": [
                      {
                          "Effect": "Allow",
                          "Principal": {
                              "Service": "cloudfront.amazonaws.com"
                          },
                          "Action": "s3:PutObject",
                          "Resource": "arn:aws:s3:::cloudfront-accesslog-bucket-yashprime/*"
                      }
                  ]
              }            
            }
      }
    }
  }