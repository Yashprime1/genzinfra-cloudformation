{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Sensu's Base Stack",
  "Parameters": {
    "NetworkStack": {
      "Description": "Name of the stack that acts as the bases for all stacks in System",
      "Type": "String"
    }
  },
  "Resources": {
    "SensuEcsCluster": {
      "Properties": {
        "ClusterName": {
          "Ref": "AWS::StackName"
        }
      },
      "Type": "AWS::ECS::Cluster"
    },
    "SensuElb": {
      "Properties": {
        "IpAddressType": "ipv4",
        "Scheme": "internet-facing",
        "SecurityGroups": [
          {
            "Fn::ImportValue": {
              "Fn::Sub": "${NetworkStack}-SecurityGroup-SensuSecurityGroupId"
            }
          }
        ],
        "Subnets": [
          {
            "Fn::ImportValue": {
              "Fn::Sub": "${NetworkStack}-PublicAzAEc2SubnetId"
            }
          },
          {
            "Fn::ImportValue": {
              "Fn::Sub": "${NetworkStack}-PublicAzBEc2SubnetId"
            }
          }
        ],
        "Type": "application"
      },
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer"
    },
    "SensuNlb": {
      "Properties": {
        "IpAddressType": "ipv4",
        "Scheme": "internet-facing",
        "SecurityGroups": [
          {
            "Fn::ImportValue": {
              "Fn::Sub": "${NetworkStack}-SecurityGroup-SensuSecurityGroupId"
            }
          }
        ],
        "Subnets": [
          {
            "Fn::ImportValue": {
              "Fn::Sub": "${NetworkStack}-PublicAzAEc2SubnetId"
            }
          },
          {
            "Fn::ImportValue": {
              "Fn::Sub": "${NetworkStack}-PublicAzBEc2SubnetId"
            }
          }
        ],
        "Type": "network"
      },
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer"
    },
    "SensuElbListener": {
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "SensuElbTargetGroup"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "SensuElb"
        },
        "Port": 80,
        "Protocol": "HTTP"
      },
      "Type": "AWS::ElasticLoadBalancingV2::Listener"
    },
    "SensuElbTargetGroup": {
      "Properties": {
        "HealthCheckIntervalSeconds": 30,
        "HealthCheckPath": "/",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": 10,
        "HealthyThresholdCount": 5,
        "HealthCheckPort": "3000",
        "Matcher": {
          "HttpCode": "200"
        },
        "Port": 3000,
        "Protocol": "HTTP",
        "TargetType": "ip",
        "UnhealthyThresholdCount": 2,
        "TargetGroupAttributes": [
          {
            "Key": "stickiness.enabled",
            "Value": "true"
          },
          {
            "Key": "stickiness.type",
            "Value": "lb_cookie"
          },
          {
            "Key": "stickiness.lb_cookie.duration_seconds",
            "Value": "86400"
          }
        ],
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "${NetworkStack}-VpcId"
          }
        }
      },
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup"
    },
    "SensuElbTargetGroup8080": {
      "Properties": {
        "HealthCheckIntervalSeconds": 30,
        "HealthCheckPath": "/",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": 10,
        "HealthyThresholdCount": 5,
        "HealthCheckPort": "3000",
        "Matcher": {
          "HttpCode": "200"
        },
        "Port": 8080,
        "Protocol": "HTTP",
        "TargetType": "ip",
        "UnhealthyThresholdCount": 2,
        "TargetGroupAttributes": [
          {
            "Key": "stickiness.enabled",
            "Value": "true"
          },
          {
            "Key": "stickiness.type",
            "Value": "lb_cookie"
          },
          {
            "Key": "stickiness.lb_cookie.duration_seconds",
            "Value": "86400"
          }
        ],
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "${NetworkStack}-VpcId"
          }
        }
      },
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup"
    },
    "SensuElbTargetGroup8081": {
      "Properties": {
        "HealthCheckIntervalSeconds": 30,
        "HealthCheckPath": "/",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": 10,
        "HealthyThresholdCount": 5,
        "HealthCheckPort": "3000",
        "Matcher": {
          "HttpCode": "200"
        },
        "Port": 8081,
        "Protocol": "HTTP",
        "TargetType": "ip",
        "UnhealthyThresholdCount": 2,
        "TargetGroupAttributes": [
          {
            "Key": "stickiness.enabled",
            "Value": "true"
          },
          {
            "Key": "stickiness.type",
            "Value": "lb_cookie"
          },
          {
            "Key": "stickiness.lb_cookie.duration_seconds",
            "Value": "86400"
          }
        ],
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "${NetworkStack}-VpcId"
          }
        }
      },
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup"
    },
    "SensuElbTargetGroup2379": {
      "Properties": {
        "HealthCheckIntervalSeconds": 30,
        "HealthCheckPath": "/health",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": 10,
        "HealthyThresholdCount": 5,
        "HealthCheckPort": "2379",
        "Matcher": {
          "GrpcCode": "12"
        },
        "Port": 2379,
        "Protocol": "TCP",
        "TargetType": "ip",
        "UnhealthyThresholdCount": 2,
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "${NetworkStack}-VpcId"
          }
        }
      },
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup"
    },
    "SensuElbTargetGroup2380": {
      "Properties": {
        "HealthCheckIntervalSeconds": 30,
        "HealthCheckPath": "/health",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": 10,
        "HealthyThresholdCount": 5,
        "HealthCheckPort": "2379",
        "Matcher": {
          "GrpcCode": "12"
        },
        "Port": 2380,
        "Protocol": "TCP",
        "TargetType": "ip",
        "UnhealthyThresholdCount": 2,
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "${NetworkStack}-VpcId"
          }
        }
      },
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup"
    },
    "SensuElbListener8080": {
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "SensuElbTargetGroup8080"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "SensuElb"
        },
        "Port": 8080,
        "Protocol": "HTTP"
      },
      "Type": "AWS::ElasticLoadBalancingV2::Listener"
    },
    "SensuElbListener8081": {
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "SensuElbTargetGroup8081"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "SensuElb"
        },
        "Port": 8081,
        "Protocol": "HTTP"
      },
      "Type": "AWS::ElasticLoadBalancingV2::Listener"
    },
    "SensuElbListener2379": {
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "SensuElbTargetGroup2379"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "SensuNlb"
        },
        "Port": 2379,
        "Protocol": "TCP"
      },
      "Type": "AWS::ElasticLoadBalancingV2::Listener"
    },
    "SensuElbListener2380": {
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "SensuElbTargetGroup2380"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "SensuNlb"
        },
        "Port": 2380,
        "Protocol": "TCP"
      },
      "Type": "AWS::ElasticLoadBalancingV2::Listener"
    }
  },
  "Outputs": {
    "SensuElbTargetGroupArn": {
      "Description": "Sensu ELB Target Group Arn",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-SensuElbTargetGroupArn"
        }
      },
      "Value": {
        "Ref": "SensuElbTargetGroup"
      }
    },
    "SensuEcsClusterName": {
      "Description": "Sensu ECS Cluster Name",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-SensuEcsClusterName"
        }
      },
      "Value": {
        "Ref": "SensuEcsCluster"
      }
    },
    "SensuElbTargetGroup8080Arn": {
      "Description": "Sensu ELB Target Group 8080 Arn",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-SensuElbTargetGroup8080Arn"
        }
      },
      "Value": {
        "Ref": "SensuElbTargetGroup8080"
      }
    },
    "SensuElbTargetGroup8081Arn": {
      "Description": "Sensu ELB Target Group 8081 Arn",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-SensuElbTargetGroup8081Arn"
        }
      },
      "Value": {
        "Ref": "SensuElbTargetGroup8081"
      }
    },
    "SensuElbTargetGroup2379Arn": {
      "Description": "Sensu ELB Target Group 2379 Arn",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-SensuElbTargetGroup2379Arn"
        }
      },
      "Value": {
        "Ref": "SensuElbTargetGroup2379"
      }
    },
    "SensuElbTargetGroup2380Arn": {
      "Description": "Sensu ELB Target Group 2380 Arn",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-Service-SensuElbTargetGroup2380Arn"
        }
      },
      "Value": {
        "Ref": "SensuElbTargetGroup2380"
      }
    }
  }
}