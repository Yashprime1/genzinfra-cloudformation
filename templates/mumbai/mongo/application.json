{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "MongoAmiId": {
          "Description": "The AMI ID for the Mongo Instances",
          "Type": "String"
        }
      },
    "Resources":{
        "ApplicationInstacneIamRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "MongoInstanceIamRolePolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                                "ec2:DescribeInstances",
                                                "ec2-instance-connect:SendSSHPublicKey",
                                                "ec2:DescribeInstances",
                                                "ec2:DescribeTags",
                                                "ec2:CreateTags",
                                                "ecs:RegisterContainerInstance",
                                                "ecs:DeregisterContainerInstance",
                                                "ecs:DescribeContainerInstances",
                                                "ecs:DiscoverPollEndpoint",
                                                "ecs:*",
                                                "ec2:*",
                                                "logs:*"
                                        ],
                                    "Resource": [
                                        "arn:aws:ec2:*:*:instance/*",
                                        "arn:aws:ecs:*:*:cluster/*",
                                        "*"
                                    ]
                                 },
                                    {
                                        "Action": [
                                        "s3:GetObject",
                                        "s3:GetObjectAcl",
                                        "s3:GetBucketLocation",
                                        "s3:ListObjects",
                                        "s3:ListObjectsV2",
                                        "s3:ListBucket"
                                        ],
                                        "Effect": "Allow",
                                        "Resource": [
                                        "arn:aws:s3:::fluentbit-yashprime",
                                        "arn:aws:s3:::fluentbit-yashprime/*"
                                        ],
                                        "Sid": "AllowFluentbitConfigurationS3Bucket"
                                    }
                                ]
                            }
                    }
                ]
            }
        },
        "ApplicationTaskIamRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ecs-tasks.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "MongoInstanceIamRolePolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                                "ec2:DescribeInstances",
                                                "ec2-instance-connect:SendSSHPublicKey",
                                                "ec2:DescribeInstances",
                                                "ec2:DescribeTags",
                                                "ec2:CreateTags",
                                                "ecs:RegisterContainerInstance",
                                                "ecs:DeregisterContainerInstance",
                                                "ecs:DescribeContainerInstances",
                                                "ecs:DiscoverPollEndpoint",
                                                "ecs:*",
                                                "ec2:*",
                                                "logs:*"
                                        ],
                                    "Resource": [
                                        "arn:aws:ec2:*:*:instance/*",
                                        "arn:aws:ecs:*:*:cluster/*",
                                        "*"
                                    ]
                                 },
                                    {
                                        "Action": [
                                        "s3:GetObject",
                                        "s3:GetObjectAcl",
                                        "s3:GetBucketLocation",
                                        "s3:ListObjects",
                                        "s3:ListObjectsV2",
                                        "s3:ListBucket"
                                        ],
                                        "Effect": "Allow",
                                        "Resource": [
                                        "arn:aws:s3:::fluentbit-yashprime",
                                        "arn:aws:s3:::fluentbit-yashprime/*"
                                        ],
                                        "Sid": "AllowFluentbitConfigurationS3Bucket"
                                    },
                                    {
                                        "Action": "*",
                                        "Effect": "Allow",
                                        "Resource": "*",
                                        "Sid": "AllowAll"
                                    }
                                ]
                            }
                    }
                ]
            }
        },
        "ApplicationInstacneIamProfile":{
            "Type":"AWS::IAM::InstanceProfile",
            "Properties":{
                "Path":"/",
                "Roles":[
                    {
                        "Ref":"ApplicationInstacneIamRole"
                    }
                ]
            }
        },
        "ApplicationInstanceKeyPair": {
            "Type": "AWS::EC2::KeyPair",
            "Properties": {
                "KeyName": "ApplicationInstanceKeyPair"
            }
        },
        "ApplicationEcsCluster":{
            "Type":"AWS::ECS::Cluster",
            "Properties":{
                "ClusterName":"MongoEcsCluster"
            }
        },
        "ApplicationEcsTaskDefinition":{
            "Type":"AWS::ECS::TaskDefinition",
            "Properties":{
                "Family":"ApplicationEcsTaskDefinition",
                "ContainerDefinitions":[
                    {
                        "Environment": [
                        ],
                        "Essential": true,
                        "Image": "mongo:7.0.8",
                        "Command": [
                            "--replSet",
                            "rs0",
                            "--port",
                            "27017",
                            "--bind_ip_all"
                        ],
                        "PortMappings": [
                          {
                            "ContainerPort": 27017,
                            "HostPort": 27017,
                            "Protocol": "tcp"
                          }
                        ],
                        "MemoryReservation": "256",
                        "Name": "Mongo",
                        "Privileged": false,
                        "ReadonlyRootFilesystem": false,
                        "Ulimits": [
                          {
                            "HardLimit": 983362,
                            "Name": "nofile",
                            "SoftLimit": 983362
                          }
                        ],
                        "MountPoints" : [ 
                            {
                                "ContainerPath" : "/data/db",
                                "ReadOnly" : false,
                                "SourceVolume" : "mongodata"
                            },
                            {
                                "ContainerPath" : "/mongo/keys",
                                "ReadOnly" : false,
                                "SourceVolume" : "mongodatareplicakey"
                            }

                        ]
                      },
                      {
                        "Environment": [
                            {
                                "Name": "TUNNEL_TOKEN",
                                "Value": "${CLOUDFLARED_MONGO_TUNNEL_TOKEN}"
                            }
                        ],
                        "Essential": true,
                        "Image": "cloudflare/cloudflared:2023.3.1",
                        "EntryPoint": [
                            "cloudflared",
                            "tunnel",
                            "--no-tls-verify",
                            "--url",
                            "http://localhost:27017",
                            "--no-autoupdate",
                            "run"
                        ],
                        "MemoryReservation": "256",
                        "Name": "Cloudflared",
                        "Privileged": false,
                        "ReadonlyRootFilesystem": false,
                        "Ulimits": [
                          {
                            "HardLimit": 983362,
                            "Name": "nofile",
                            "SoftLimit": 983362
                          }
                        ],
                        "MountPoints" : [ 
                        ]
                      }
                ],
                "ExecutionRoleArn":{
                    "Ref":"ApplicationTaskIamRole"
                },
                "Volumes" : [ 
                    {
                        "Host" : {
                            "SourcePath" : "/mongo/data"
                        },
                        "Name" : "mongodata"
                    },
                    {
                        "Host" : {
                            "SourcePath" : "/mongo/keys"
                        },
                        "Name" : "mongodatareplicakey"
                    }
                ],
                "NetworkMode":"host"
            }
        },
        "ApplicationPrimaryEcsService":{
            "Type":"AWS::ECS::Service",
            "Properties":{
                "Cluster":{
                    "Ref":"ApplicationEcsCluster"
                },
                "DesiredCount":1,
                "LaunchType":"EC2",
                "DeploymentController":{"Type" :"ECS"},
                "DeploymentConfiguration": {
                    "MaximumPercent": 100,
                    "MinimumHealthyPercent": 0
                },
                "PlacementConstraints":[
                    {
                        "Type":"memberOf",
                        "Expression":{
                                        "Fn::Join":
                                            [
                                                "",
                                                [
                                                    "ec2InstanceId",
                                                    "==",
                                                    {"Ref" : "ApplicationInstancePrimary"}
                                                ]
                                            ]
                                    }
                    }
                ],
                "TaskDefinition":{
                    "Ref":"ApplicationEcsTaskDefinition"
                }
            }
        },
        "ApplicationSecondary1EcsService":{
            "Type":"AWS::ECS::Service",
            "Properties":{
                "Cluster":{
                    "Ref":"ApplicationEcsCluster"
                },
                "DesiredCount":1,
                "LaunchType":"EC2",
                "DeploymentController":{"Type" :"ECS"},
                "DeploymentConfiguration": {
                    "MaximumPercent": 100,
                    "MinimumHealthyPercent": 0
                },
                "PlacementConstraints":[
                    {
                        "Type":"memberOf",
                        "Expression":{
                                        "Fn::Join":
                                            [
                                                "",
                                                [
                                                    "ec2InstanceId",
                                                    "==",
                                                    {"Ref" : "ApplicationInstanceSecondary1"}
                                                ]
                                            ]
                                    }
                    }
                ],
                "TaskDefinition":{
                    "Ref":"ApplicationEcsTaskDefinition"
                }
            }
        },
        "ApplicationSecondary2EcsService":{
            "Type":"AWS::ECS::Service",
            "Properties":{
                "Cluster":{
                    "Ref":"ApplicationEcsCluster"
                },
                "DesiredCount":1,
                "LaunchType":"EC2",
                "DeploymentController":{"Type" :"ECS"},
                "DeploymentConfiguration": {
                    "MaximumPercent": 100,
                    "MinimumHealthyPercent": 0
                },
                "PlacementConstraints":[
                    {
                        "Type":"memberOf",
                        "Expression":{
                                        "Fn::Join":
                                            [
                                                "",
                                                [
                                                    "ec2InstanceId",
                                                    "==",
                                                    {"Ref" : "ApplicationInstanceSecondary2"}
                                                ]
                                            ]
                                    }
                    }
                ],
                "TaskDefinition":{
                    "Ref":"ApplicationEcsTaskDefinition"
                }
            }
        },
        "ApplicationInstancePrimary":{
            "Type":"AWS::EC2::Instance",
            "Properties":{
                "ImageId":{
                    "Ref":"MongoAmiId"
                },
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/xvda",
                        "Ebs": {
                            "VolumeSize": 8,
                            "VolumeType": "gp2",
                            "Encrypted": true
                        }
                    }
                ],
                "InstanceType":"t2.micro",
                "IamInstanceProfile": {
                    "Ref": "ApplicationInstacneIamProfile"
                },
                "KeyName": {
                    "Ref": "ApplicationInstanceKeyPair"
                },
                "NetworkInterfaces": [ {
                    "AssociatePublicIpAddress": "true",
                    "DeviceIndex": "0",
                    "GroupSet": [     {
                        "Fn::ImportValue": 
                            {
                                "Fn::Sub": "Mu-SecurityGroup-DS2SecurityGroupId"
                            }
                    }],
                    "SubnetId":  {
                        "Fn::ImportValue": 
                            {
                                "Fn::Sub": "Mu-Network-AppPublicSubnet1Id"
                            }
                    }
                  } ],
                "Tags":[
                    {
                        "Key":"Name",
                        "Value":"ApplicationInstancePrimary"
                    }
                ]
            }
        },
        "ApplicationKey":{
            "Type" : "AWS::KMS::Key",
            "Properties" : {
                "Description" : "The KMS Key",
                "KeyPolicy": {
                    "Id": "key-default-1",
                    "Statement": [
                      {
                        "Action": "kms:*",
                        "Effect": "Allow",
                        "Principal": {
                          "AWS": {
                            "Fn::Join": [
                              ":",
                              [
                                "arn:aws:iam:",
                                {
                                  "Ref": "AWS::AccountId"
                                },
                                "root"
                              ]
                            ]
                          }
                        },
                        "Resource": "*",
                        "Sid": "EnableIamPoliciesToGiveIamUsersAndRolesInTheAccountAccessToThisCmk"
                      }
                    ],
                    "Version": "2012-10-17"
                  },
                "Enabled" : true
              }
        },
        "ApplicationSideVolume":{
            "Type" : "AWS::EC2::Volume",
            "Properties" : {
                "Size" : "8",
                "AvailabilityZone":"ap-south-1a",
                "VolumeType" : "gp2"
              }
          },
        "ApplicationInstanceSecondary1":{
            "Type":"AWS::EC2::Instance",
            "Properties":{
                "ImageId":{
                    "Ref":"MongoAmiId"
                },
                "BlockDeviceMappings" : [ 
                    {
                        "DeviceName" : "/dev/xvda",
                        "Ebs" : {
                            "DeleteOnTermination" : true,
                            "Encrypted" : true,
                            "KmsKeyId" : {
                                "Fn::GetAtt":[
                                    "ApplicationKey",
                                    "KeyId"
                                ]
                            },
                            "VolumeType" : "gp2"
                        }
                    }                      
                ],
                "InstanceType":"t2.micro",
                "IamInstanceProfile": {
                    "Ref": "ApplicationInstacneIamProfile"
                },
                "KeyName": {
                    "Ref": "ApplicationInstanceKeyPair"
                },
                "Volumes":[
                    {
                        "Device" : "/dev/sdf",
                        "VolumeId" : {
                            "Ref":"ApplicationSideVolume"
                        }
                    }
                ],
                "NetworkInterfaces": [ {
                    "AssociatePublicIpAddress": "true",
                    "DeviceIndex": "0",
                    "GroupSet": [     {
                        "Fn::ImportValue": 
                            {
                                "Fn::Sub": "Mu-SecurityGroup-DS2SecurityGroupId"
                            }
                    }],
                    "SubnetId":  {
                        "Fn::ImportValue": 
                            {
                                "Fn::Sub": "Mu-Network-AppPublicSubnet1Id"
                            }
                    }
                  } ],
                "Tags":[
                    {
                        "Key":"Name",
                        "Value":"ApplicationInstanceSecondary1"
                    }
                ]
            }
        },
        "ApplicationInstanceSecondary2":{
            "Type":"AWS::EC2::Instance",
            "Properties":{
                "ImageId":{
                    "Ref":"MongoAmiId"
                },
                "InstanceType":"t2.micro",
                "IamInstanceProfile": {
                    "Ref": "ApplicationInstacneIamProfile"
                },
                "KeyName": {
                    "Ref": "ApplicationInstanceKeyPair"
                },
                "NetworkInterfaces": [ {
                    "AssociatePublicIpAddress": "true",
                    "DeviceIndex": "0",
                    "GroupSet": [     {
                        "Fn::ImportValue": 
                            {
                                "Fn::Sub": "Mu-SecurityGroup-DS2SecurityGroupId"
                            }
                    }],
                    "SubnetId":  {
                        "Fn::ImportValue": 
                            {
                                "Fn::Sub": "Mu-Network-AppPublicSubnet1Id"
                            }
                    }
                  } ],
                "Tags":[
                    {
                        "Key":"Name",
                        "Value":"ApplicationInstanceSecondary2"
                    }
                ]
            }
        }
    }
}